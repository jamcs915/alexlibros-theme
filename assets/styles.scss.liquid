/* Estilos base para AlexLibros */
body {
  font-family: 'Helvetica', sans-serif;
  background-color: #F5F0EB;
  color: #3E2723;
  margin: 0;
  padding: 0;
}
h1, h2, h3 {
  font-family: 'Georgia', serif;
  color: #3E2723;
}
a {
  color: #3E2723;
  text-decoration: none;
}
button {
  cursor: pointer;
}
.carousel::-webkit-scrollbar {
  height: 8px;
}
.carousel::-webkit-scrollbar-thumb {
  background: #8B5E3C;
  border-radius: 4px;
}
