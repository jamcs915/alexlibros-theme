<div class="product-card" style="background:#fff;padding:15px;border-radius:8px;width:200px;flex-shrink:0;">
  <a href="{{ product.url }}" style="text-decoration:none;color:inherit;">
    <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" style="max-width:100%;height:auto;border-radius:4px;">
    <h3 style="font-size:1.1rem;margin:10px 0 5px;">{{ product.title }}</h3>
    <p style="color:#8B5E3C;font-weight:bold;">{{ product.price | money }}</p>
  </a>
</div>
